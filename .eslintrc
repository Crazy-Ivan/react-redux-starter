{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parser": "babel-eslint",
    "plugins": [
        "react",
        "promise"
    ],
    "globals": {
      "__DEV__" : false,
      "__PROD__": false,
      "__TEST__": false
    },
    "rules": {
      "indent": ["error", 2],
      "linebreak-style": ["error", "unix"],
      "quotes": ["error", "single"],
      "semi": ["error", "always"],
      "react/jsx-uses-react": "error",
      "react/jsx-uses-vars": "error"
    }
}
